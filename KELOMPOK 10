#include <iostream>
#include <string>
using namespace std;

int main(){
    string var = "AGIL";
    char* varPtr = &var[0];

    // Menampilkan huruf pertama dan terakhir
    cout << "Huruf pertama: " << *varPtr << endl;
    cout << "Huruf terakhir: " << *(varPtr + var.length() - 1) << endl;

    return 0;
}
